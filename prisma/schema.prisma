generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  externalId      String?         @unique
  email           String          @unique
  apiKey          String          @default(cuid())
  discordId       String?
  plan            Plan            @default(BASIC)
  quotaLimit      Int
  monitoredSites  String[]        // F.eks. ["facebook", "twitter", "darkweb"]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  events          Event[]
  eventCategories EventCategory[]
  quota           Quota?
}

model EventCategory {
  id        String   @id @default(cuid())
  name      String
  color     Int
  emoji     String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
  user      User     @relation(fields: [userId], references: [id])

  @@unique([name, userId])
}

model Event {
  id               String         @id @default(cuid())
  formattedMessage String
  userId           String
  name             String
  fields           Json
  deliveryStatus   DeliveryStatus @default(PENDING)
  site             String         // Hvilken nettside funnet er på
  eventType        EventType
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  eventCategoryId  String?
  eventCategory    EventCategory? @relation(fields: [eventCategoryId], references: [id])
  user             User           @relation(fields: [userId], references: [id])

  @@index([createdAt])
}

model Quota {
  id        String   @id @default(cuid())
  userId    String   @unique
  year      Int
  month     Int
  count     Int      @default(0)
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

enum Plan {
  BASIC       // Billigste: Overvåker sosiale medier
  PREMIUM     // Medium: Overvåker sosiale medier + nettaviser
  ELITE       // Dyreste: Overvåker hele nettet inkl. dark web
}

enum DeliveryStatus {
  PENDING
  DELIVERED
  FAILED
}

enum EventType {
  DISCOVERY   // Når noe uønsket blir funnet
  DELETION    // Når noe er slettet
}
