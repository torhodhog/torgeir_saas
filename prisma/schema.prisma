generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  externalId      String?         @unique
  quotaLimit      Int
  plan            Plan            @default(BASIC)
  email           String          @unique
  apiKey          String          @default(cuid())
  discordId       String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  events          Event[]
  eventCategories EventCategory[]
  monitoredSites  MonitoredSite[]
  quota           Quota?
  searchResults   SearchResult[]
    watchlist       Watchlist[]

}

model EventCategory {
  id        String   @id @default(cuid())
  name      String
  color     Int
  emoji     String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
  user      User     @relation(fields: [userId], references: [id])

  @@unique([name, userId])
}

model Event {
  id               String         @id @default(cuid())
  formattedMessage String
  userId           String
  name             String
  fields           Json
  deliveryStatus   DeliveryStatus @default(PENDING)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  eventCategoryId  String?
  eventType        EventType
  site             String
  eventCategory    EventCategory? @relation(fields: [eventCategoryId], references: [id])
  user             User           @relation(fields: [userId], references: [id])
  searchResults    SearchResult[]

  @@index([createdAt])
}

model Quota {
  id        String   @id @default(cuid())
  userId    String   @unique
  year      Int
  month     Int
  count     Int      @default(0)
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model MonitoredSite {
  id        String   @id @default(cuid())
  userId    String
  url       String
  platform  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model SearchResult {
  id        String   @id @default(cuid())
  userId    String
  query     String
  title     String
  url       String
  snippet   String?
  createdAt DateTime @default(now())
  eventId   String?
  Event     Event?   @relation(fields: [eventId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Watchlist {
  id            String   @id @default(cuid())
  userId        String
  query         String
  subQueries    Json     @default("[]") // Lagrer underkategorier som JSON
  notifications String
  createdAt     DateTime @default(now())
  notificationMethod String @default("dashboard")
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, query]) // Sikrer at en bruker ikke legger inn samme s√∏k to ganger
}


enum Plan {
  BASIC
  PREMIUM
  ELITE
}

enum DeliveryStatus {
  PENDING
  DELIVERED
  FAILED
}

enum EventType {
  DISCOVERY
  DELETION
}
